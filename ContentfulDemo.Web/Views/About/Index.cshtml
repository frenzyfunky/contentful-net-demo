@model HomepageViewModel
@{ViewData["Title"] = "About"; }

<div class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url(@Model.HomepageHero.BackgroundImage.File.Url);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="js-fullheight d-flex justify-content-center align-items-center">
        <div class="col-md-8 text text-center">
            <div class="img mb-4" style="background-image: url(@Model.HomepageHero.Avatar.File.Url);"></div>
            <div class="desc">
                <h2 class="subheading">Hello I'm</h2>
                <h1 class="mb-4">@Model.HomepageHero.Name</h1>
                <p class="mb-4">@Model.HomepageHero.Headline</p>
                <ul class="ftco-social mt-3">
                    <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                    <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                    <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>